<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    >
    <TextView
        android:id="@+id/textTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Nathuram Mithai"
        android:gravity="center"
        android:background="#4e8d7c"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:textFontWeight="300"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp"
        android:layout_below="@id/textTop"
        app:srcCompat="@drawable/mithai" />

    <TextView
        android:id="@+id/text1"
        android:textColor="@color/white"
        android:background="#4e8d7c"
        android:padding="20dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="We make guilt-free sweets"
        android:layout_below="@id/imageView5"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/text2"
        android:padding="20dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#4e8d7c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doors to gluttony open @11"
        android:layout_below="@id/text1"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/text3"
        android:padding="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#4e8d7c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location : Quest Mall,4th Floor"
        android:layout_below="@id/text2"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        />




</RelativeLayout>
